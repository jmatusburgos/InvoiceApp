@model IEnumerable<InvoicingApp.ViewModels.ProductViewModel>
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Productos</h3>

<input type="button" class="btn btn-primary" style="margin-top:15px;"
       onclick="location.href='@Url.Action("Create", "Product")'" value="Nuevo" />


<table class="table" style="margin-top:15px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplyTax)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>

    <td>
        @Html.HiddenFor(model => item.Id)
        @Html.DisplayFor(modelItem => item.Code)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ApplyTax)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id })
    </td>
</tr>
    }
</table>

